<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" href="/imagenes/logo.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Satisfy&display=swap" rel="stylesheet">
    <title>Face To Face</title>
</head>

<body>
    <header>
        <div class="divHeader">
            <div class="divLogoTitulo">
                <div class="divTitulo">
                    <div class="faceToFaceLogo">
                        <img src="/imagenes/logo.png" alt="">
                    </div>
                    <div>
                        <h1>Face To Face</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="divMenuPerfil">
            <div class="seleccionado divPerfil">
                <a href="/usuario/perfil">Perfil</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="/usuario/amigos">Amigos</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="/pregunta/preguntas">Preguntas</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="/usuario/logout">Desconectarse</a>
            </div>
            <div class="divPerfil">
                <div class="divFotoPerfil"><img src="/usuario/imagenUsuario/<%=usuarioLogueado.FOTO%>" alt=""></div>
                <div class="divDatos"><%=usuarioLogueado.PUNTOS + " puntos"%></div>
            </div>
        </div>
    </header>
    <main>
        <div class="divMain">
            <div>
                <h2><%=datos.pregunta.pregunta.PREGUNTA%></h2>
            </div>
            <div class="divResultadoBusqueda">
                <form action="/pregunta/responder/<%=datos.pregunta.pregunta.ID%>/<%=datos.pregunta.pregunta.PREGUNTA%>" method="POST" class="foto500">
                    <table>
                        <%datos.pregunta.respuestas.forEach(element => { %>
                        <tr>
                            <td><input type="radio" name="respuesta" value="<%=element.ID%>"><%=element.RESPUESTA%></td>
                        </tr> 
                        <%})%>
                    </table>
                    <div class="divAddRespuesta">
                        <div><label>Otra respuestas:</label></div>
                        <div><input type="text" name="otro" placeholder="Nueva respuesta"></div>
                        <div><button type="submit" formaction="/pregunta/addRespuesta/<%=datos.pregunta.pregunta.ID%>">AÃ±adir</button></div>
                    </div>
                    <div class="center"><button class="botonCrearPregunta" type="submit">Responder</button></div>
                </form>
            </div>
        </div>
    </main>

</body>

</html>