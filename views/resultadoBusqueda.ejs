<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="shortcut icon" href="imagenes/FaceToFace.jpg" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Satisfy&display=swap" rel="stylesheet">
    <title>Face To Face</title>
</head>

<body>
    <header>
        <div class="divHeader">
            <div class="divLogoTitulo">
                <div class="divTitulo">
                    <div class="faceToFaceLogo">
                        <img src="imagenes/logo.png" alt="">
                    </div>
                    <div>
                        <h1>Face To Face</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="divMenuPerfil">
            <div class="seleccionado divPerfil">
                <a href="/perfil">Perfil</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="/amigos">Amigos</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="preguntas.html">Preguntas</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="iniciarSesion.html">Desconectarse</a>
            </div>
            <div class="divPerfil">
                <div class="divFotoPerfil"><img src="imagenes/perfil.png" alt=""></div>
                <div class="divDatos"><%=datos.puntos + " puntos"%></div>
            </div>

        </div>
    </header>
    <main>
        <div class="divMain">
            <div>
                <h2>Resultados de la b√∫squeda</h2>
            </div>
            <div class="divResultadoBusqueda">
                <%if(datos.busqueda.length > 0) {%>
                    <% datos.busqueda.forEach(perfil => { %>
                        <div class="divPerfilEncontrado">
                            <div><%= perfil.NOMBRE %></div>
                            <div>
                                <img class="imgPerfilBusqueda" src="imagenes/avatar1.png" alt="">
                            </div>
                            <div>
                                <a href="/solicitar/<%= perfil.CORREO%>" class="boton seleccionado">Solicitar amistad</a>
                            </div>
                        </div>
                    <%})%>
                <%} else {%>
                    <div class="divBuscarAmigo">No se han encontrado personas con ese nombre</div>
                <%}%>
            </div>
        </div>
    </main>

</body>

</html>