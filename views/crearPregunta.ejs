<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" href="/imagenes/logo.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Satisfy&display=swap" rel="stylesheet">
    <title>Face To Face</title>
</head>
<body>
    <header>
        <div class="divHeader">
            <div class="divLogoTitulo">
                <div class="divTitulo">
                    <div class="faceToFaceLogo">
                        <img src="/imagenes/logo.png" alt="">
                    </div>
                    <div>
                        <h1>Face To Face</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="divMenuPerfil">
            <div class="seleccionado divPerfil">
                <a href="/usuario/perfil">Perfil</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="/usuario/amigos">Amigos</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="/pregunta/preguntas">Preguntas</a>
            </div>
            <div class="seleccionado divPerfil">
                <a href="/usuario/logout">Desconectarse</a>
            </div>
            <div class="divPerfil">
                <div class="divFotoPerfil"><img src="/usuario/imagenUsuario/<%=usuarioLogueado.FOTO%>" alt=""></div>
                <div class="divDatos"><%=usuarioLogueado.PUNTOS + " puntos"%></div>
            </div>
        </div>
    </header>
    <main>
        <div class="divMain">
            <div>
                <h2>Crear Pregunta</h2>
            </div>
            <div class="contenedorCrearPregunta fondoVerde">
                <form class="formInicioSesion" method="POST">
                    <%if(datos.pregunta == undefined) { %>
                        <div>Pregunta:</div>
                        <div><input type="text" name="pregunta"></div>
                    <%} else {%>
                        <div>Pregunta:</div>
                        <div><input type="text" name="pregunta" value="<%=datos.pregunta%>"></div>
                    <%}%>
                    <%if(datos.respuestas == undefined) { %>
                        <div>Nº Respuestas:</div>
                        <div><input type="number" id="respuestas" name="respuestas" min="2"></div>
                        <div class="center gridColumnInicio"><button class="boton seleccionado" type="submit"
                                formaction="/insertarRespuestas">Insertar Respuestas</button></div>
                    <%}else {%>
                        <div>Nº Respuestas:</div>
                        <div><input type="number" id="respuestas" name="respuestas" min="2" value="<%=datos.respuestas%>" readonly class="colorBlockVerde"></div>
                        <%for(let i = 1; i < datos.respuestas +1; ++i) {%>
                            <div>Respuesta <%=i%>:</div>
                            <div><input type="text" name="respuesta"></div>
                        <%}%>
                        <div class="center gridColumnInicio"><button class="boton seleccionado" type="submit" formaction="/crearPregunta">Crear Pregunta</button></div>
                    <%}%>

                </form>
                <%if(!datos.correct) {%>
                <div class="center">
                    <%=datos.errorMsg %>
                </div>
                <% } %>
            </div>
        </div>
    </main>

</body>

</html>